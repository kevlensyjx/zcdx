<style>
    .screen ul li {
        width: 110px;
    }

    .block {
        display: block;
        float: left;
        height: 115px;
        overflow: hidden;
        padding: 15px 10px 0 0;
        text-align: center;
    }

        .block .count {
            background-image: url("../../content/images/count_bg.png");
