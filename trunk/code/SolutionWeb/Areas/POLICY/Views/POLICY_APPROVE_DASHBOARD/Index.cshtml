            height: 40px;
            position: absolute;
            right: -20px;
            top: -8px;
            width: 44px;
        }

    li.block .img {
        cursor: pointer;
        height: 86px;
        line-height: 86px;
        margin: 0 auto;
        position: relative;
        text-align: center;
        width: 86px;
    }

        li.block .img p {
            position: static;
            top: 50%;
        }

            li.block .img p img {
                height: 65px;
                left: 50%;
                margin-left: -32px;
                margin-top: -32px;
                max-height: 86px;
                max-width: 86px;
                position: absolute;
                top: 50%;
                vertical-align: middle;
                width: 65px;
            }

            li.block .img p::after {
                content: ".";
                font-size: 1px;
                visibility: hidden;
            }

